{% extends 'MyskillsBundle:Video:base.html.twig' %}
{% block title %}Результаты поиска{% endblock%}

{% block body %}
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Search results</h1>
            <ol class="breadcrumb">
                <li><a href="/">Main page</a>
                </li>
                <li class="active">Search</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    {{ include('MyskillsBundle:Video:search_line.html.twig') }}

    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Found: {{ count }}</h2>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Section -->
    <div class="row">
        {% if app.request.query.get("target") == 'dictionary' %}
            {{ include('MyskillsBundle:Video:search_dictionary.html.twig') }}
        {% else %}
            {{ include('MyskillsBundle:Video:search_books.html.twig') }}
        {% endif %}
    </div>
    <!-- /.row -->

{% endblock%}