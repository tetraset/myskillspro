{% extends 'MyskillsBundle:Video:base.html.twig' %}
{% block title %}Limit of games{% endblock%}
{% block keywords %}, game limit, game limit{% endblock %}
{% block description %}Play our game to enjoy studying English{% endblock %}
{% block body %}
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Daily limit exceeded</h1>
            <ol class="breadcrumb">
                <li><a href="/">Main</a>
                </li>
                <li class="active">Daily games limit</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <section class="box" id="game_scene">
                <header class="major">
                    <p style="text-align: center"><img style="width: 100%" src="/game_of_thrones_no.png" /></p>
                    <p class="bg-danger" style="padding: 10px; text-align: center; font-size: 15px;">Sorry, but you've reached the daily free usage limit ({{ limit }} games per day). You should try our <a href="/subscription">subscription</a> - it gives you unlimited use of the site!</p>
                </header>
            </section>
        </div>
    </div>
{% endblock %}